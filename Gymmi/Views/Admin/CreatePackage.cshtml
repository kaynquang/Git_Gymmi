@model Gymmi.Models.GoiTap
@{
    ViewData["Title"] = "Thêm Gói Tập";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-black">
    <!-- Header -->
    <div class="bg-gradient-to-r from-yellow-600 to-yellow-500 p-6 shadow-lg">
        <div class="flex justify-between items-center">
            <div>
                <h1 class="text-3xl font-bold text-white">
                    <i class="fas fa-plus-circle mr-3"></i>
                    Thêm Gói Tập Mới
                </h1>
                <p class="text-yellow-100 mt-2">Tạo gói tập luyện mới cho hội viên</p>
            </div>
            <a href="@Url.Action("Packages", "Admin")" class="bg-white text-yellow-600 px-6 py-3 rounded-lg font-semibold hover:bg-yellow-50 transition-colors">
                <i class="fas fa-arrow-left mr-2"></i>
                Quay Lại
            </a>
        </div>
    </div>

    <!-- Form -->
    <div class="p-6">
        <div class="max-w-2xl mx-auto">
            <div class="bg-gray-800 rounded-lg shadow-xl p-8 border border-gray-700">
                <form asp-action="CreatePackage" method="post" class="space-y-6">
                    <div asp-validation-summary="ModelOnly" class="text-red-400 text-sm"></div>
                    
                    <!-- Package Name -->
                    <div>
                        <label asp-for="TenGoi" class="block text-sm font-medium text-gray-300 mb-2">
                            Tên Gói Tập <span class="text-red-400">*</span>
                        </label>
                        <input asp-for="TenGoi" type="text" 
                               class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent"
                               placeholder="VD: Gói tập 1 tháng, Gói tập 3 tháng...">
                        <span asp-validation-for="TenGoi" class="text-red-400 text-sm"></span>
                    </div>

                    <!-- Package Type -->
                    <div>
                        <label asp-for="LoaiGoiTap" class="block text-sm font-medium text-gray-300 mb-2">
                            Loại Gói Tập <span class="text-red-400">*</span>
                        </label>
                        <select asp-for="LoaiGoiTap" 
                                class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent">
                            <option value="">Chọn loại gói tập</option>
                            <option value="Cơ bản">Cơ bản</option>
                            <option value="Nâng cao">Nâng cao</option>
                            <option value="VIP">VIP</option>
                            <option value="Premium">Premium</option>
                        </select>
                        <span asp-validation-for="LoaiGoiTap" class="text-red-400 text-sm"></span>
                    </div>

                    <!-- Duration -->
                    <div>
                        <label asp-for="SoNgay" class="block text-sm font-medium text-gray-300 mb-2">
                            Thời Hạn (ngày) <span class="text-red-400">*</span>
                        </label>
                        <input asp-for="SoNgay" type="number" min="1" max="365"
                               class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent"
                               placeholder="Nhập số ngày">
                        <span asp-validation-for="SoNgay" class="text-red-400 text-sm"></span>
                    </div>

                    <!-- Price -->
                    <div>
                        <label asp-for="GiaTien" class="block text-sm font-medium text-gray-300 mb-2">
                            Giá Tiền (VND) <span class="text-red-400">*</span>
                        </label>
                        <input asp-for="GiaTien" type="number" min="0" step="1000"
                               class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent"
                               placeholder="VD: 500000">
                        <span asp-validation-for="GiaTien" class="text-red-400 text-sm"></span>
                    </div>

                    <!-- Description -->
                    <div>
                        <label asp-for="MoTa" class="block text-sm font-medium text-gray-300 mb-2">
                            Mô Tả Gói Tập
                        </label>
                        <textarea asp-for="MoTa" rows="4"
                                  class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent"
                                  placeholder="Mô tả chi tiết về gói tập, quyền lợi, ưu đãi..."></textarea>
                        <span asp-validation-for="MoTa" class="text-red-400 text-sm"></span>
                    </div>

                    <!-- Start Date -->
                    <div>
                        <label asp-for="NgayBatDau" class="block text-sm font-medium text-gray-300 mb-2">
                            Ngày Bắt Đầu
                        </label>
                        <input asp-for="NgayBatDau" type="date" 
                               class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent">
                        <span asp-validation-for="NgayBatDau" class="text-red-400 text-sm"></span>
                    </div>

                    <!-- End Date -->
                    <div>
                        <label asp-for="NgayKetThuc" class="block text-sm font-medium text-gray-300 mb-2">
                            Ngày Kết Thúc
                        </label>
                        <input asp-for="NgayKetThuc" type="date" 
                               class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent">
                        <span asp-validation-for="NgayKetThuc" class="text-red-400 text-sm"></span>
                    </div>

                    <!-- Submit Buttons -->
                    <div class="flex space-x-4 pt-6">
                        <button type="submit" 
                                class="flex-1 bg-gradient-to-r from-yellow-600 to-yellow-500 text-white px-6 py-3 rounded-lg font-semibold hover:from-yellow-700 hover:to-yellow-600 transition-all duration-300">
                            <i class="fas fa-save mr-2"></i>
                            Tạo Gói Tập
                        </button>
                        <a href="@Url.Action("Packages", "Admin")" 
                           class="flex-1 bg-gray-600 hover:bg-gray-700 text-white px-6 py-3 rounded-lg font-semibold transition-colors text-center">
                            <i class="fas fa-times mr-2"></i>
                            Hủy
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Package Guidelines -->
    <div class="p-6">
        <div class="max-w-2xl mx-auto">
            <div class="bg-gray-800 rounded-lg p-6 border border-gray-700">
                <h3 class="text-lg font-semibold text-white mb-4">
                    <i class="fas fa-lightbulb text-yellow-400 mr-2"></i>
                    Gợi Ý Tạo Gói Tập
                </h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-gray-300">
                    <div class="space-y-2">
                        <h4 class="font-semibold text-yellow-400">Gói Cơ Bản (1 tháng)</h4>
                        <ul class="space-y-1 text-xs">
                            <li>• 30 ngày</li>
                            <li>• 500,000 - 800,000 VND</li>
                            <li>• Truy cập thiết bị cơ bản</li>
                        </ul>
                    </div>
                    <div class="space-y-2">
                        <h4 class="font-semibold text-yellow-400">Gói VIP (3 tháng)</h4>
                        <ul class="space-y-1 text-xs">
                            <li>• 90 ngày</li>
                            <li>• 1,200,000 - 2,000,000 VND</li>
                            <li>• Tặng kèm PT, đo cơ thể</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Auto calculate end date based on start date and duration
        document.getElementById('SoNgay').addEventListener('change', function() {
            const days = parseInt(this.value);
            const startDate = document.getElementById('NgayBatDau').value;
            
            if (days && startDate) {
                const start = new Date(startDate);
                const end = new Date(start.getTime() + (days * 24 * 60 * 60 * 1000));
                document.getElementById('NgayKetThuc').value = end.toISOString().split('T')[0];
            }
        });

        document.getElementById('NgayBatDau').addEventListener('change', function() {
            const days = parseInt(document.getElementById('SoNgay').value);
            const startDate = this.value;
            
            if (days && startDate) {
                const start = new Date(startDate);
                const end = new Date(start.getTime() + (days * 24 * 60 * 60 * 1000));
                document.getElementById('NgayKetThuc').value = end.toISOString().split('T')[0];
            }
        });
    </script>
} 