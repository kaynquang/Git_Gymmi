@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-black">
    <!-- Header -->
    <div class="bg-gradient-to-r from-orange-600 to-orange-500 p-6 shadow-lg">
        <h1 class="text-3xl font-bold text-white">
            <i class="fas fa-tachometer-alt mr-3"></i>
            Bảng Điều Khiển Quản Trị
        </h1>
        <p class="text-orange-100 mt-2">Chào mừng đến với hệ thống quản lý phòng tập Gymmi</p>
    </div>

    <!-- Error/Success Messages -->
    @if (ViewBag.Error != null)
    {
        <div class="p-6">
            <div class="bg-red-600 text-white p-4 rounded-lg mb-4">
                <i class="fas fa-exclamation-triangle mr-2"></i>
                @ViewBag.Error
            </div>
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="p-6">
            <div class="bg-green-600 text-white p-4 rounded-lg mb-4">
                <i class="fas fa-check-circle mr-2"></i>
                @TempData["Success"]
            </div>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="p-6">
            <div class="bg-red-600 text-white p-4 rounded-lg mb-4">
                <i class="fas fa-exclamation-triangle mr-2"></i>
                @TempData["Error"]
            </div>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6 mb-8">
            <!-- Total Members -->
            <div class="bg-gradient-to-r from-blue-600 to-blue-700 rounded-lg p-6 text-white shadow-xl">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-blue-100">Tổng Hội Viên</p>
                        <p class="text-3xl font-bold">@ViewBag.TotalMembers</p>
                    </div>
                    <i class="fas fa-users text-4xl text-blue-200"></i>
                </div>
            </div>

            <!-- Total Users -->
            <div class="bg-gradient-to-r from-green-600 to-green-700 rounded-lg p-6 text-white shadow-xl">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-green-100">Tổng Người Dùng</p>
                        <p class="text-3xl font-bold">@ViewBag.TotalUsers</p>
                    </div>
                    <i class="fas fa-user-cog text-4xl text-green-200"></i>
                </div>
            </div>

            <!-- Total Rooms -->
            <div class="bg-gradient-to-r from-purple-600 to-purple-700 rounded-lg p-6 text-white shadow-xl">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-purple-100">Tổng Phòng Tập</p>
                        <p class="text-3xl font-bold">@ViewBag.TotalRooms</p>
                    </div>
                    <i class="fas fa-building text-4xl text-purple-200"></i>
                </div>
            </div>

            <!-- Total Equipment -->
            <div class="bg-gradient-to-r from-yellow-600 to-yellow-700 rounded-lg p-6 text-white shadow-xl">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-yellow-100">Tổng Thiết Bị</p>
                        <p class="text-3xl font-bold">@ViewBag.TotalEquipment</p>
                    </div>
                    <i class="fas fa-dumbbell text-4xl text-yellow-200"></i>
                </div>
            </div>

            <!-- Total Revenue -->
            <div class="bg-gradient-to-r from-red-600 to-red-700 rounded-lg p-6 text-white shadow-xl">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-red-100">Tổng Doanh Thu</p>
                        <p class="text-2xl font-bold">@ViewBag.TotalRevenue.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</p>
                    </div>
                    <i class="fas fa-chart-line text-4xl text-red-200"></i>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <!-- User Management -->
            <div class="bg-gray-800 rounded-lg p-6 shadow-xl border border-gray-700 hover:bg-gray-750 transition-all duration-300 group">
                <div class="text-center">
                    <i class="fas fa-users text-4xl text-orange-500 mb-4 group-hover:text-orange-400"></i>
                    <h3 class="text-xl font-bold text-white mb-2">Quản Lý Người Dùng</h3>
                    <p class="text-gray-300 mb-4">Quản lý tài khoản và phân quyền</p>
                    <a href="@Url.Action("Users", "Admin")" class="bg-orange-500 hover:bg-orange-600 text-white px-4 py-2 rounded-lg inline-block transition-colors">
                        Xem Chi Tiết
                    </a>
                </div>
            </div>

            <!-- Member Management -->
            <div class="bg-gray-800 rounded-lg p-6 shadow-xl border border-gray-700 hover:bg-gray-750 transition-all duration-300 group">
                <div class="text-center">
                    <i class="fas fa-id-card text-4xl text-blue-500 mb-4 group-hover:text-blue-400"></i>
                    <h3 class="text-xl font-bold text-white mb-2">Quản Lý Hội Viên</h3>
                    <p class="text-gray-300 mb-4">Quản lý thông tin hội viên</p>
                    <a href="@Url.Action("Members", "Admin")" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg inline-block transition-colors">
                        Xem Chi Tiết
                    </a>
                </div>
            </div>

            <!-- Room Management -->
            <div class="bg-gray-800 rounded-lg p-6 shadow-xl border border-gray-700 hover:bg-gray-750 transition-all duration-300 group">
                <div class="text-center">
                    <i class="fas fa-building text-4xl text-green-500 mb-4 group-hover:text-green-400"></i>
                    <h3 class="text-xl font-bold text-white mb-2">Quản Lý Phòng Tập</h3>
                    <p class="text-gray-300 mb-4">Quản lý phòng tập và cơ sở vật chất</p>
                    <a href="@Url.Action("Rooms", "Admin")" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-lg inline-block transition-colors">
                        Xem Chi Tiết
                    </a>
                </div>
            </div>

            <!-- Equipment Management -->
            <div class="bg-gray-800 rounded-lg p-6 shadow-xl border border-gray-700 hover:bg-gray-750 transition-all duration-300 group">
                <div class="text-center">
                    <i class="fas fa-dumbbell text-4xl text-purple-500 mb-4 group-hover:text-purple-400"></i>
                    <h3 class="text-xl font-bold text-white mb-2">Quản Lý Thiết Bị</h3>
                    <p class="text-gray-300 mb-4">Quản lý thiết bị tập luyện</p>
                    <a href="@Url.Action("Equipment", "Admin")" class="bg-purple-500 hover:bg-purple-600 text-white px-4 py-2 rounded-lg inline-block transition-colors">
                        Xem Chi Tiết
                    </a>
                </div>
            </div>

            <!-- Package Management -->
            <div class="bg-gray-800 rounded-lg p-6 shadow-xl border border-gray-700 hover:bg-gray-750 transition-all duration-300 group">
                <div class="text-center">
                    <i class="fas fa-box text-4xl text-yellow-500 mb-4 group-hover:text-yellow-400"></i>
                    <h3 class="text-xl font-bold text-white mb-2">Quản Lý Gói Tập</h3>
                    <p class="text-gray-300 mb-4">Quản lý các gói tập luyện</p>
                    <a href="@Url.Action("Packages", "Admin")" class="bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded-lg inline-block transition-colors">
                        Xem Chi Tiết
                    </a>
                </div>
            </div>

            <!-- Work Assignments -->
            <div class="bg-gray-800 rounded-lg p-6 shadow-xl border border-gray-700 hover:bg-gray-750 transition-all duration-300 group">
                <div class="text-center">
                    <i class="fas fa-tasks text-4xl text-red-500 mb-4 group-hover:text-red-400"></i>
                    <h3 class="text-xl font-bold text-white mb-2">Phân Công Công Việc</h3>
                    <p class="text-gray-300 mb-4">Phân công nhân viên và ca làm việc</p>
                    <a href="@Url.Action("WorkAssignments", "Admin")" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg inline-block transition-colors">
                        Xem Chi Tiết
                    </a>
                </div>
            </div>

            <!-- Payment Invoices -->
            <div class="bg-gray-800 rounded-lg p-6 shadow-xl border border-gray-700 hover:bg-gray-750 transition-all duration-300 group">
                <div class="text-center">
                    <i class="fas fa-receipt text-4xl text-teal-500 mb-4 group-hover:text-teal-400"></i>
                    <h3 class="text-xl font-bold text-white mb-2">Hóa Đơn Thanh Toán</h3>
                    <p class="text-gray-300 mb-4">Quản lý hóa đơn và thanh toán</p>
                    <a href="@Url.Action("PaymentInvoices", "Admin")" class="bg-teal-500 hover:bg-teal-600 text-white px-4 py-2 rounded-lg inline-block transition-colors">
                        Xem Chi Tiết
                    </a>
                </div>
            </div>

            <!-- Reports -->
            <div class="bg-gray-800 rounded-lg p-6 shadow-xl border border-gray-700 hover:bg-gray-750 transition-all duration-300 group">
                <div class="text-center">
                    <i class="fas fa-chart-bar text-4xl text-indigo-500 mb-4 group-hover:text-indigo-400"></i>
                    <h3 class="text-xl font-bold text-white mb-2">Báo Cáo</h3>
                    <p class="text-gray-300 mb-4">Xem báo cáo và thống kê</p>
                    <a href="@Url.Action("Reports", "Admin")" class="bg-indigo-500 hover:bg-indigo-600 text-white px-4 py-2 rounded-lg inline-block transition-colors">
                        Xem Chi Tiết
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 