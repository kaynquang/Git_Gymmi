<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gymmi Member Portal</title>
    
    <!-- Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <!-- Custom Styles -->
    <style>
        .bg-gradient-gym {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .hover-scale {
            transition: transform 0.2s ease-in-out;
        }
        .hover-scale:hover {
            transform: scale(1.05);
        }
        .glass-effect {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
    </style>
</head>
<body class="bg-gradient-to-br from-gray-900 via-gray-800 to-black min-h-screen">
    
    <!-- Navigation Sidebar -->
    <div class="fixed inset-y-0 left-0 z-50 w-64 bg-gradient-to-b from-purple-900 via-blue-900 to-indigo-900 shadow-xl transform transition-transform duration-300" id="sidebar">
        <!-- Logo -->
        <div class="flex items-center justify-center h-20 border-b border-purple-700">
            <div class="flex items-center">
                <i class="fas fa-dumbbell text-3xl text-purple-300 mr-3"></i>
                <h1 class="text-2xl font-bold text-white">Gymmi</h1>
            </div>
        </div>

        <!-- Navigation Menu -->
        <nav class="mt-8 px-4">
            <div class="space-y-2">
                <!-- Dashboard -->
                <a href="@Url.Action("Dashboard", "Member")" class="flex items-center px-4 py-3 text-white rounded-lg hover:bg-purple-700 transition-colors group">
                    <i class="fas fa-tachometer-alt mr-3 text-purple-300 group-hover:text-white"></i>
                    <span>Trang Chủ</span>
                </a>

                <!-- Profile -->
                <a href="@Url.Action("Profile", "Member")" class="flex items-center px-4 py-3 text-white rounded-lg hover:bg-purple-700 transition-colors group">
                    <i class="fas fa-user mr-3 text-purple-300 group-hover:text-white"></i>
                    <span>Hồ Sơ Cá Nhân</span>
                </a>

                <!-- Membership -->
                <a href="@Url.Action("Membership", "Member")" class="flex items-center px-4 py-3 text-white rounded-lg hover:bg-purple-700 transition-colors group">
                    <i class="fas fa-id-card mr-3 text-purple-300 group-hover:text-white"></i>
                    <span>Thẻ Hội Viên</span>
                </a>

                <!-- Packages -->
                <a href="@Url.Action("Packages", "Member")" class="flex items-center px-4 py-3 text-white rounded-lg hover:bg-purple-700 transition-colors group">
                    <i class="fas fa-box mr-3 text-purple-300 group-hover:text-white"></i>
                    <span>Gói Tập</span>
                </a>

                <!-- Schedule -->
                <a href="@Url.Action("Schedule", "Member")" class="flex items-center px-4 py-3 text-white rounded-lg hover:bg-purple-700 transition-colors group">
                    <i class="fas fa-calendar-alt mr-3 text-purple-300 group-hover:text-white"></i>
                    <span>Lịch Tập</span>
                </a>

                <!-- Book Workout -->
                <a href="@Url.Action("BookWorkout", "Member")" class="flex items-center px-4 py-3 text-white rounded-lg hover:bg-purple-700 transition-colors group">
                    <i class="fas fa-plus-circle mr-3 text-purple-300 group-hover:text-white"></i>
                    <span>Đặt Lịch Tập</span>
                </a>

                <!-- Facilities -->
                <a href="@Url.Action("Facilities", "Member")" class="flex items-center px-4 py-3 text-white rounded-lg hover:bg-purple-700 transition-colors group">
                    <i class="fas fa-building mr-3 text-purple-300 group-hover:text-white"></i>
                    <span>Cơ Sở Vật Chất</span>
                </a>

                <!-- Payment History -->
                <a href="@Url.Action("PaymentHistory", "Member")" class="flex items-center px-4 py-3 text-white rounded-lg hover:bg-purple-700 transition-colors group">
                    <i class="fas fa-receipt mr-3 text-purple-300 group-hover:text-white"></i>
                    <span>Lịch Sử Thanh Toán</span>
                </a>

                <!-- Logout -->
                <div class="pt-4 mt-4 border-t border-purple-700">
                    <a href="@Url.Action("Index", "Home")" class="flex items-center px-4 py-3 text-red-300 rounded-lg hover:bg-red-700 hover:text-white transition-colors group">
                        <i class="fas fa-sign-out-alt mr-3"></i>
                        <span>Đăng Xuất</span>
                    </a>
                </div>
            </div>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="ml-64 min-h-screen">
        <!-- Top Header -->
        <header class="bg-gray-800 shadow-lg border-b border-gray-700">
            <div class="flex items-center justify-between px-6 py-4">
                <div class="flex items-center">
                    <button id="menu-toggle" class="md:hidden text-white mr-3">
                        <i class="fas fa-bars"></i>
                    </button>
                    <h2 class="text-xl font-semibold text-white">@ViewData["Title"]</h2>
                </div>
                
                <div class="flex items-center space-x-4">
                    <!-- Notifications -->
                    <div class="relative">
                        <button class="text-gray-300 hover:text-white transition-colors">
                            <i class="fas fa-bell text-xl"></i>
                            <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center">3</span>
                        </button>
                    </div>
                    
                    <!-- User Profile -->
                    <div class="flex items-center">
                        <div class="w-8 h-8 bg-purple-500 rounded-full flex items-center justify-center mr-2">
                            <i class="fas fa-user text-white text-sm"></i>
                        </div>
                        <span class="text-white text-sm">Hội Viên</span>
                    </div>
                </div>
            </div>
        </header>

        <!-- Page Content -->
        <main class="p-6">
            @RenderBody()
        </main>
    </div>

    <!-- Mobile Menu Overlay -->
    <div id="mobile-overlay" class="fixed inset-0 bg-black bg-opacity-50 z-40 md:hidden hidden"></div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // Mobile menu toggle
        document.getElementById('menu-toggle')?.addEventListener('click', function() {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('mobile-overlay');
            
            sidebar.classList.toggle('-translate-x-full');
            overlay.classList.toggle('hidden');
        });

        // Close mobile menu when clicking overlay
        document.getElementById('mobile-overlay')?.addEventListener('click', function() {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('mobile-overlay');
            
            sidebar.classList.add('-translate-x-full');
            overlay.classList.add('hidden');
        });

        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert-auto-hide').fadeOut();
        }, 5000);
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 