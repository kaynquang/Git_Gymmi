@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="min-h-screen bg-dark py-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold text-white mb-4">Privacy Policy</h1>
            <p class="text-xl text-gray-400">Last updated: January 2025</p>
        </div>

        <!-- Content -->
        <div class="bg-dark-gray rounded-lg shadow-lg p-8 space-y-8 border border-gray-700">
            <!-- Introduction -->
            <section>
                <h2 class="text-2xl font-semibold text-white mb-4">Introduction</h2>
                <p class="text-gray-300 leading-relaxed">
                    At Gymmi, we are committed to protecting your privacy and ensuring the security of your personal information. 
                    This Privacy Policy explains how we collect, use, disclose, and safeguard your information when you visit 
                    our website or use our services.
                </p>
            </section>

            <!-- Information We Collect -->
            <section>
                <h2 class="text-2xl font-semibold text-white mb-4">Information We Collect</h2>
                <div class="space-y-4">
                    <div>
                        <h3 class="text-lg font-medium text-white mb-2">Personal Information</h3>
                        <p class="text-gray-300 leading-relaxed">
                            We may collect personal information such as your name, email address, phone number, 
                            address, and payment information when you register for membership or services.
                        </p>
                    </div>
                    <div>
                        <h3 class="text-lg font-medium text-white mb-2">Health Information</h3>
                        <p class="text-gray-300 leading-relaxed">
                            We may collect health-related information including fitness goals, medical conditions, 
                            and emergency contact information to provide you with safe and effective fitness services.
                        </p>
                    </div>
                    <div>
                        <h3 class="text-lg font-medium text-white mb-2">Usage Information</h3>
                        <p class="text-gray-300 leading-relaxed">
                            We collect information about how you use our website and services, including 
                            access times, pages viewed, and the routes by which you access our services.
                        </p>
                    </div>
                </div>
            </section>

            <!-- How We Use Your Information -->
            <section>
                <h2 class="text-2xl font-semibold text-white mb-4">How We Use Your Information</h2>
                <ul class="space-y-3 text-gray-300">
                    <li class="flex items-start">
                        <i class="fas fa-check text-primary mr-3 mt-1"></i>
                        <span>To provide and maintain our fitness services</span>
                    </li>
                    <li class="flex items-start">
                        <i class="fas fa-check text-primary mr-3 mt-1"></i>
                        <span>To process payments and manage your membership</span>
                    </li>
                    <li class="flex items-start">
                        <i class="fas fa-check text-primary mr-3 mt-1"></i>
                        <span>To communicate with you about services, promotions, and updates</span>
                    </li>
                    <li class="flex items-start">
                        <i class="fas fa-check text-primary mr-3 mt-1"></i>
                        <span>To improve our services and develop new features</span>
                    </li>
                    <li class="flex items-start">
                        <i class="fas fa-check text-primary mr-3 mt-1"></i>
                        <span>To ensure safety and security of our facilities</span>
                    </li>
                </ul>
            </section>

            <!-- Information Sharing -->
            <section>
                <h2 class="text-2xl font-semibold text-white mb-4">Information Sharing</h2>
                <p class="text-gray-300 leading-relaxed mb-4">
                    We do not sell, trade, or otherwise transfer your personal information to third parties without your consent, except in the following circumstances:
                </p>
                <ul class="space-y-2 text-gray-300 ml-4">
                    <li>• With your explicit consent</li>
                    <li>• To comply with legal obligations</li>
                    <li>• To protect our rights and safety</li>
                    <li>• With trusted service providers who assist us in operating our business</li>
                </ul>
            </section>

            <!-- Data Security -->
            <section>
                <h2 class="text-2xl font-semibold text-white mb-4">Data Security</h2>
                <p class="text-gray-300 leading-relaxed">
                    We implement appropriate security measures to protect your personal information against 
                    unauthorized access, alteration, disclosure, or destruction. However, no method of transmission 
                    over the internet or electronic storage is 100% secure.
                </p>
            </section>

            <!-- Your Rights -->
            <section>
                <h2 class="text-2xl font-semibold text-white mb-4">Your Rights</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="bg-black p-4 rounded-lg border border-gray-600">
                        <h3 class="font-semibold text-white mb-2">Access</h3>
                        <p class="text-gray-400 text-sm">Request access to your personal information</p>
                    </div>
                    <div class="bg-black p-4 rounded-lg border border-gray-600">
                        <h3 class="font-semibold text-white mb-2">Correction</h3>
                        <p class="text-gray-400 text-sm">Request correction of inaccurate information</p>
                    </div>
                    <div class="bg-black p-4 rounded-lg border border-gray-600">
                        <h3 class="font-semibold text-white mb-2">Deletion</h3>
                        <p class="text-gray-400 text-sm">Request deletion of your personal information</p>
                    </div>
                    <div class="bg-black p-4 rounded-lg border border-gray-600">
                        <h3 class="font-semibold text-white mb-2">Portability</h3>
                        <p class="text-gray-400 text-sm">Request transfer of your data to another service</p>
                    </div>
                </div>
            </section>

            <!-- Cookies -->
            <section>
                <h2 class="text-2xl font-semibold text-white mb-4">Cookies and Tracking</h2>
                <p class="text-gray-300 leading-relaxed">
                    We use cookies and similar tracking technologies to enhance your experience on our website. 
                    You can control cookie settings through your browser preferences.
                </p>
            </section>

            <!-- Contact Information -->
            <section class="bg-primary bg-opacity-10 p-6 rounded-lg border border-primary border-opacity-30">
                <h2 class="text-2xl font-semibold text-white mb-4">Contact Us</h2>
                <p class="text-gray-300 mb-4">
                    If you have any questions about this Privacy Policy or our data practices, please contact us:
                </p>
                <div class="space-y-2 text-gray-300">
                    <div class="flex items-center">
                        <i class="fas fa-envelope text-primary mr-3"></i>
                        <span>privacy@gymmi.com</span>
                    </div>
                    <div class="flex items-center">
                        <i class="fas fa-phone text-primary mr-3"></i>
                        <span>(555) 123-4567</span>
                    </div>
                    <div class="flex items-center">
                        <i class="fas fa-map-marker-alt text-primary mr-3"></i>
                        <span>123 Fitness Street, Health City, FC 12345</span>
                    </div>
                </div>
            </section>

            <!-- Updates -->
            <section>
                <h2 class="text-2xl font-semibold text-white mb-4">Policy Updates</h2>
                <p class="text-gray-300 leading-relaxed">
                    We may update this Privacy Policy from time to time. We will notify you of any changes by 
                    posting the new Privacy Policy on this page and updating the "last updated" date.
                </p>
            </section>
        </div>

        <!-- Back to Home -->
        <div class="text-center mt-8">
            <a asp-area="" asp-controller="Home" asp-action="Index" 
               class="inline-flex items-center bg-primary text-white px-6 py-3 rounded hover:bg-accent transition duration-300">
                <i class="fas fa-arrow-left mr-2"></i>
                Back to Home
            </a>
        </div>
    </div>
</div>
